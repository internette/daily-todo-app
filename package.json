{
  "name": "daily-todo",
  "productName": "DailyToDo",
  "version": "1.0.0",
  "description": "An unobtrusive desktop app to keep track of daily tasks that resets at midnight",
  "main": "main.js",
  "author": {
    "name": "Antoinette Janus",
    "email": "antoinette.c.janus@gmail.com",
    "url": "https://acjanus.co"
  },
  "scripts": {
    "dev:build-watch": "webpack --watch --progress --debug",
    "dev:build": "webpack --progress",
    "app:launch": "electron .",
    "app:launch:test:osx": "export ELECTRON_ENABLE_LOGGING=true && electron .",
    "app:launch:test:windows": "set ELECTRON_ENABLE_LOGGING=true && electron .",
    "pack": "build --dir",
    "dist:format-only": "build --prepackaged ./dist",
    "dist": "build"
  },
  "postinstall": "install-app-deps",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/twaffl3s/daily-todo.git"
  },
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/twaffl3s/daily-todo/issues"
  },
  "homepage": "https://github.com/twaffl3s/daily-todo#readme",
  "build": {
    "appId": "com.electron.${productName}",
    "productName": "DailyToDo",
    "mac": {
      "category": "Utilities"
    },
    "dmg": {
      "title": "${productName}",
      "contents": [
        {
          "x": 100,
          "y": 50
        },
        {
          "x": 100,
          "y": 270,
          "type": "link",
          "path": "/Applications"
        }
      ]
    }
  },
  "devDependencies": {
    "babel-core": "^6.24.1",
    "babel-loader": "^7.0.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "css-loader": "^0.28.0",
    "electron": "^1.7.5",
    "electron-builder": "^19.5.1",
    "electron-packager": "^8.7.0",
    "node-sass": "^4.5.2",
    "sass-loader": "^6.0.3",
    "style-loader": "^0.16.1"
  },
  "dependencies": {
    "babel-cli": "^6.24.1",
    "electron-config": "^0.2.1",
    "moment": "^2.18.1",
    "prop-types": "^15.5.9",
    "react": "^15.5.4",
    "react-custom-scrollbars": "^4.1.1",
    "react-dom": "^15.5.4",
    "react-redux": "^5.0.4",
    "redux": "^3.6.0",
    "redux-electron-ipc": "^1.1.9",
    "webpack": "^2.4.1"
  }
}
